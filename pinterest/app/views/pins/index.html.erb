<p id="notice"><%= notice %></p>

<h1 class="text-center">Bienvenido a el recurso de pins</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td ><%= image_tag(pin.photo, :style => 'width:400px') %></td>
        <td><%= pin.description  %>&nbsp;&nbsp;&nbsp;</td> 
        <td><%= link_to 'Show', pin %> &nbsp;</td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %> &nbsp;</td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
